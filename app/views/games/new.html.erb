<h1>New game</h1>
<div class="d-flex flex-wrap gap-2 mb-4">
  <% @letters.each do |letter| %>
    <div class="letter-box text-white bg-primary d-flex align-items-center justify-content-center">
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join %>

  <label for="word">What is the longest word that you can find?</label>
  <input type="text" name="word" id="word">

  <input type="submit" value="Play">
</form>
